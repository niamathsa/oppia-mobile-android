<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Light" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="AppTheme.Dark" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_dark</item>
    </style>
  
    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/green_background_gradient</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/text_dark</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/text_dark</item>
    </style>
    
    <style name="ButtonTextSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/text_dark</item>
    </style>
    
    <style name="PageHeadingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/text_light</item>
    </style>

    <style name="FieldLabelText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/text_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FieldText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="SmallTextLight">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/text_light</item>
    </style>
    
    <style name="SmallTextDark">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/text_dark</item>
    </style>
    
    <style name="PointsText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/text_light</item>
    </style>

</resources>